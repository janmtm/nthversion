{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "login": true,
    "siteOptions": {
      "blogname": "Nthversion Playground",
      "blogdescription": "A playground for the nthversion plugin"
    },
    "preferredVersions": {
      "php": "8.3",
      "wp": "latest"
    },
    "steps": [
      {
        "step": "installTheme",
        "themeData": {
          "resource": "wordpress.org/themes",
          "slug": "twentytwentythree"
        }
      },
      {
        "step": "activateTheme",
        "themeFolderName": "twentytwentythree"
      },
      {
        "step": "installPlugin",
        "pluginData": {
          "resource": "url",
          "url": "https://github.com/janmtm/nthversion/releases/download/1.0.0/nthversion.zip"
        },
        "options": {
          "activate": true
        }
      },
      {
        "step": "installPlugin",
        "pluginData": {
          "resource": "url",
          "url": "https://github.com/janmtm/nthversion-format-enabler/releases/download/1.0.0/nthversion-format-enabler.zip"
        },
        "options": {
          "activate": true
        }
      }
    ]
  }