{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "siteOptions": {
        "blogname": "Nthversion Playground",
        "blogdescription": "A playground for the nthversion plugin"
    },
    "preferredVersions": {
        "php": "8.3",
        "wp": "5.9"
    },
    "steps": [
    {
            "step": "installTheme",
            "themeData": {
                "resource": "https://downloads.wordpress.org/theme",
                "slug": "twentytwentythree"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "https://github.com/janmtm/nthversion/releases/download/1.0.0/nthversion.zip",
                "slug": "nthversion"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "https://github.com/janmtm/nthversion-format-enabler/releases/download/1.0.0/nthversion-format-enabler.zip",
                "slug": "nthversion-format-enabler"
            }
        }
    ]
}